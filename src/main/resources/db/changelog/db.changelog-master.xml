<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.9.xsd">
    <changeSet id="create_movie_table" author="I">
        <createTable tableName="movie" schemaName="movies">
            <column name="movie_id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="movie_title" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="movie_year" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="create_users_and_roles_tables" author="I">
        <createTable tableName="users" schemaName="movies">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="roles" schemaName="movies">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="create_entity_for_users_images" author="I">
        <createTable tableName="avatar_images">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="content_type" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="filename" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_avatar_images_users_fk" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>